{% extends "@user/layouts/sub.twig" %}

{% set id = "actions.recharge-phone" %}
{% set title = "Recharge Phone | Actions" %}

{% block breadcrumb_content %}
<div class="page-area">
  <div class="breadcumb-overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="breadcrumb text-center">
          <div class="section-headline white-headline text-center">
            <h3>Recharge Phone</h3>
          </div>
          <ul>
            <li class="home-bread">Actions</li>
            <li>Recharge Phone</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block sub_content %}
<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="send-money-form">
      <div class="form-text">
        <h4 class="form-top">Recharge Phone</h4>
        <div class="form-inner">
          <form action="/actions/recharge-phone" method="post">
            <div class="row">
              <div class="col-md-12 col-sm-12 col-xs-12">
                <label>Choose service provider account <span class="text-danger">*</span></label>
                <select name="service-provider-id" required>
                  {% for item in service_providers %}
                    <option value="{{ item.id }}">{{ item.title }}</option>
                  {% endfor %}
                </select>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 col-sm-12 col-xs-12">
                <label>Enter phone number <span class="text-danger">*</span></label>
                <input type="tel" name="phone" placeholder="Phone Number" min="10" max="10" required>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 col-sm-12 col-xs-12">
                <label>Enter recharge amount <span class="text-danger">*</span></label>
                <input type="number" name="amount" placeholder="Recharge Amount" min="10" max="10000" step="0.1" required>
              </div>
            </div>
            <div class="row">
              <div class="col-md-4 col-sm-4 col-xs-12">
                <button type="submit">Recharge</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
