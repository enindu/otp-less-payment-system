{% extends "@user/layouts/sub.twig" %}

{% set id = "actions.transfer-money" %}
{% set title = "Transfer Money | Actions" %}

{% block breadcrumb_content %}
<div class="page-area">
  <div class="breadcumb-overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="breadcrumb text-center">
          <div class="section-headline white-headline text-center">
            <h3>Transfer Money</h3>
          </div>
          <ul>
            <li class="home-bread">Actions</li>
            <li>Transfer Money</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block sub_content %}
<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="send-money-form">
      <div class="form-text">
        <h4 class="form-top">Transfer Money</h4>
        <div class="form-inner">
          <form action="/actions/transfer-money" method="post" id="transfer-money-form">
            <div class="row">
              <div class="col-md-12 col-sm-12 col-xs-12">
                <label>Choose transfer type <span class="text-danger">*</span></label>
                <select name="type-id" id="type-id" required>
                  {% for item in types %}
                    {% if item.subtitle != "EPAY" %}
                      <option value="{{ item.id }}">{{ item.title }}</option>
                    {% endif %}
                  {% endfor %}
                </select>
              </div>
            </div>
            <div id="choose-bank" class="row" style="display: none;">
              <div class="col-md-12 col-sm-12 col-xs-12">
                <label>Choose bank <span class="text-danger">*</span></label>
                <select name="bank-id">
                  {% for item in banks %}
                    <option value="{{ item.id }}">{{ item.title }}</option>
                  {% endfor %}
                </select>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 col-sm-12 col-xs-12">
                <label>Enter transfer amount <span class="text-danger">*</span></label>
                <input type="number" name="amount" placeholder="Transfer Amount" min="100" max="1000000" step="0.1" required>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 col-sm-12 col-xs-12">
                <label>Enter receiver account number <span class="text-danger">*</span></label>
                <input type="tel" name="account" placeholder="Account Number" minlength="12" maxlength="12" required>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 col-sm-12 col-xs-12">
                <label>Enter transfer description</label>
                <textarea name="description" rows="10" placeholder="Transfer Description" maxlength="500"></textarea>
              </div>
            </div>
            <div class="row">
              <div class="col-md-4 col-sm-4 col-xs-12">
                <button type="submit">Transfer</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
