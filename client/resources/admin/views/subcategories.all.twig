{% extends "@admin/layouts/sub-2.twig" %}

{% set id = "subcategories.all" %}
{% set title = "All | Subcategories" %}

{% block sub_content %}
<div class="container-fluid">
  <div class="row row-eq-spacing align-items-center">
    <div class="col-12 col-sm-auto mb-20 mb-sm-0">
      <a href="#" id="back" class="btn">
        <i class="fa fa-chevron-left mr-5"></i> Back
      </a>
    </div>
    <div class="col-12 col-sm-auto">
      <h4 class="my-0">
        <i class="fa fa-cubes mr-5"></i> Subcategories
      </h4>
    </div>
  </div>
  <div class="row row-eq-spacing">
    <div class="col-12">
      <div class="card p-15">
        <h1 class="card-title">
          <i class="fa fa-cubes mr-5"></i> Subcategories
        </h1>
        <div class="table-responsive mb-20">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th class="w-25">ID</th>
                <th>Slug</th>
                <th>Title</th>
                <th>Subtitle</th>
                <th>Description</th>
                <th>Category</th>
                <th class="w-25"></th>
              </tr>
            </thead>
            <tbody>
              {% for item in subcategories %}
                <tr>
                  <td>
                    <div class="text-wrap">{{ item.id }}</div>
                  </td>
                  <td>
                    <div class="text-wrap">{{ item.slug }}</div>
                  </td>
                  <td>
                    <div class="text-wrap">{{ item.title }}</div>
                  </td>
                  <td>
                    <div class="text-wrap">{{ item.subtitle != "false" ? item.subtitle : "N/A" }}</div>
                  </td>
                  <td>
                    <div class="text-wrap">{{ item.description != "false" ? item.description : "N/A" }}</div>
                  </td>
                  <td>
                    <div class="text-wrap">{{ item.category.title }}</div>
                  </td>
                  <td>
                    <div class="d-flex">
                      <a href="/admin/subcategories/{{ item.id }}" class="btn btn-square mr-5">
                        <i class="fa fa-wrench"></i>
                      </a>
                      <form action="/admin/subcategories/remove" method="post">
                        <input type="hidden" name="id" value="{{ item.id }}">
                        <button class="btn btn-danger btn-square">
                          <i class="fa fa-trash-alt"></i>
                        </button>
                      </form>
                    </div>
                  </td>
                </tr>
              {% else %}
                <tr>
                  <td colspan="7">
                    <div class="text-center">
                      <i class="fa fa-frown mr-5"></i> No subcategories found!
                    </div>
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
        <nav>
          <ul class="pagination text-center mb-0">
            {% for item in 1..pages %}
              <li class="page-item {{ item == page ? "active" }}">
                <a href="/admin/subcategories/all?page={{ item }}" class="page-link">{{ item }}</a>
              </li>
            {% endfor %}
          </ul>
        </nav>
      </div>
    </div>
  </div>
</div>
{% endblock %}
